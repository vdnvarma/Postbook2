<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Postbook</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="container fade-in">
        <div class="nav">
            <div></div>
            <a href="/profile/<%= user._id %>" class="btn btn-warning">
                <i class="fas fa-user"></i>
                Profile
            </a>
        </div>
        
        <div class="dashboard-header">
            <img src="data:<%= user.profilepic.contentType %>;base64,<%= user.profilepic.data.toString('base64') %>" alt="Profile Picture" class="dashboard-avatar">
            <div>
                <h1 class="dashboard-greeting">
                    <span style="font-weight: 300;">Hello</span>, <%= user.name%> üëãüèª
                </h1>
                <p style="color: #9ca3af; font-size: 1.1rem;">@<%= user.username %></p>
            </div>
        </div>
        
        <% if(user.nameIsDefault) { %>
            <div class="card" style="margin-bottom: 32px; background: rgba(245, 158, 11, 0.1); border-color: #f59e0b;">
                <div style="display: flex; align-items: center; justify-content: space-between; gap: 16px;">
                    <div>
                        <h2 style="font-size: 1.2rem; font-weight: 600; color: #f59e0b;">
                            <i class="fas fa-exclamation-circle" style="margin-right: 8px;"></i>
                            Complete Your Profile
                        </h2>
                        <p style="color: #d97706;">
                            Your profile is incomplete. Add your name and other details to get the most out of Postbook.
                        </p>
                    </div>
                    <a href="/edituser/<%= user._id %>" class="btn btn-warning">
                        <i class="fas fa-edit"></i>
                        Edit Profile
                    </a>
                </div>
            </div>
        <% } %>

        <div class="card" style="margin-bottom: 32px;">
            <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 16px; color: #e5e7eb;">
                <i class="fas fa-edit" style="color: #3b82f6; margin-right: 8px;"></i>
                Create New Post
            </h2>
            <form method="post" action="/post" style="max-width: none;">
                <div class="form-group">
                    <textarea id="content" placeholder="What's on your mind?" name="content" class="form-input" required></textarea>
                    <label for="content" class="form-label">What's on your mind?</label>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top: 16px; align-self: flex-start;">
                    <i class="fas fa-paper-plane"></i>
                    Create Post
                </button>
            </form>
        </div>
        
        <div class="posts">
            <h2 style="font-size: 1.8rem; font-weight: 600; margin-bottom: 24px; color: #e5e7eb;">
                <i class="fas fa-stream" style="color: #3b82f6; margin-right: 12px;"></i>
                Your Posts
            </h2>
            
            <div class="postcontainer">
                <% if(user.posts.length>0){ %>
                    <% user.posts.reverse().forEach(function(post){ %>
                        <div class="post">
                            <div class="post-header">
                                <img src="data:<%= user.profilepic.contentType %>;base64,<%= user.profilepic.data.toString('base64') %>" alt="Profile Picture" class="post-avatar">
                                <div>
                                    <div class="post-username">@<%= user.username %></div>
                                    <small style="color: #6b7280; font-size: 12px;">
                                        <i class="fas fa-clock" style="margin-right: 4px;"></i>
                                        <%= new Date(post.createdAt).toLocaleDateString() %>
                                    </small>
                                </div>
                            </div>
                            
                            <div class="post-content">
                                <%= post.content %>
                            </div>
                            
                            <div class="post-actions">
                                <span class="post-likes">
                                    <i class="fas fa-heart" style="color: #ef4444; margin-right: 4px;"></i>
                                    <%= post.Likes.length %> Likes
                                </span>
                                
                                <div style="display: flex; gap: 16px;">
                                    <a class="post-action" href="/like/<%= post._id %>">
                                        <i class="fas fa-heart" style="margin-right: 4px;"></i>
                                        <%= post.Likes.indexOf(user._id) !== -1 ? "Unlike" : "Like" %>
                                    </a>
                                    <a class="post-action" href="/edit/<%= post._id %>">
                                        <i class="fas fa-edit" style="margin-right: 4px;"></i>
                                        Edit
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% }else{ %>
                    <div class="card" style="text-align: center; padding: 48px;">
                        <i class="fas fa-feather" style="font-size: 4rem; color: #6b7280; margin-bottom: 16px;"></i>
                        <h3 style="font-size: 1.5rem; color: #9ca3af; margin-bottom: 8px;">No Posts Yet</h3>
                        <p style="color: #6b7280;">Start sharing your thoughts by creating your first post!</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <% if(user.nameIsDefault) { %>
        <div id="profile-modal-backdrop" class="modal-backdrop"></div>
        <div id="profile-modal" class="modal">
            <div class="modal-content">
                <i class="fas fa-exclamation-triangle modal-icon"></i>
                <h2 class="modal-title">Complete Your Profile!</h2>
                <p class="modal-text">
                    Welcome to Postbook! To get the best experience, please take a moment to complete your profile.
                </p>
                <div class="modal-actions">
                    <a href="/edituser/<%= user._id %>" class="btn btn-warning">
                        <i class="fas fa-user-edit"></i>
                        Complete Profile
                    </a>
                    <button id="close-modal-btn" class="btn btn-secondary">
                        Later
                    </button>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const modal = document.getElementById('profile-modal');
                const backdrop = document.getElementById('profile-modal-backdrop');
                const closeModalBtn = document.getElementById('close-modal-btn');

                // Function to show the modal
                const showModal = () => {
                    backdrop.style.display = 'block';
                    modal.style.display = 'block';
                    setTimeout(() => {
                        backdrop.style.opacity = '1';
                        modal.style.opacity = '1';
                        modal.style.transform = 'translate(-50%, -50%) scale(1)';
                    }, 10);
                };

                // Function to hide the modal
                const hideModal = () => {
                    backdrop.style.opacity = '0';
                    modal.style.opacity = '0';
                    modal.style.transform = 'translate(-50%, -50%) scale(0.9)';
                    setTimeout(() => {
                        backdrop.style.display = 'none';
                        modal.style.display = 'none';
                    }, 300);
                };

                // Show the modal on page load
                showModal();

                // Event listeners to close the modal
                closeModalBtn.addEventListener('click', hideModal);
                backdrop.addEventListener('click', hideModal);
            });
        </script>
    <% } %>
</body>
</html>